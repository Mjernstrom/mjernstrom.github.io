                                else:
                                    for convert in range(0, 3):
                                        boardBotDisplay[j + convert][i] = "*"
                                    print("\nEnemy Frigate sunk!")
                                return True

    elif ship == 1:
        scanCount = 1

        # Scan for # horizontally:

        for i in range(1, 12):
            if scanCount == 2:
                break
            else:
                for j in range(1, 11):
                    if scanCount == 2:
                        break
                    else:
                        if user == 2:
                            for scan in range(0, 2):
                                if boardP[i][j + scan] == "#":
                                    scanCount += scan
                                else:
                                    scanCount = 1
                                    break
                        else:
                            for scan in range(0, 2):
                                if boardBotDisplay[i][j + scan] == "#":
                                    scanCount += scan
                                else:
                                    scanCount = 1
                                    break

        # If the code makes it here, set board pieces for the ship to '*'
        # Has to check hidden board to ensure all the '!'s are of the same ship type

        if scanCount == 2:
            scanCount = 1
            for i in range(1, 12):
                if scanCount == 2:
                    break
                else:
                    for j in range(1, 11):
                        if scanCount == 2:
                            break
                        else:
                            for convert in range(0, 2):
                                if user == 2:
                                    if boardPCopy[i][j + convert] == "G":
                                        scanCount += convert
                                    else:
                                        scanCount = 1
                                        break
                                else:
                                    if boardBot[i + 4][j + 4 + convert] == "G":
                                        scanCount += convert
                                    else:
                                        scanCount = 1
                                        break
